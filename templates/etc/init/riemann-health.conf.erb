description "start and stop riemann-health"
author "Gareth Rushgrove"

start on runlevel [2345]
stop on runlevel [!2345]

setuid <%= @health_user %>

respawn
respawn limit 5 20

exec <%= @rvm_ruby_string ? "/usr/local/rvm/wrappers/#{@rvm_ruby_string}/riemann-health" : "riemann-health" %> -h <%= @host %>
